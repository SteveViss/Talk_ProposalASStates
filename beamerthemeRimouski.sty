\mode<presentation>

\def\@website{\@empty}
\def\website#1{\def\@website{#1}}

%%%%% USE DEFAULT AS THE OUTER THEME
\usetheme{Pittsburgh}

%%%%% REMOVE THE NAV BAR
\beamertemplatenavigationsymbolsempty

%%%%% CHOOSE SYMBOLS
\setbeamertemplate{itemize item}[circle]
\setbeamertemplate{itemize subitem}[circle]
\setbeamertemplate{itemize subsubitem}[circle]

%%%%% DEFINE FONTS AND FONTS SIZES
\setbeamerfont{title}{size=\Large,series=\bfseries\sffamily,parent=structure}
\setbeamerfont{frametitle}{size=\normalsize,series=\bfseries,parent=structure}
\setbeamerfont{subtitle}{size=\normalsize, series=\mdseries, parent=title}
\setbeamerfont{author}{size=\small, series=\bfseries}
\setbeamerfont{date}{size=\xsmall}
\setbeamerfont{structure}{series=\bfseries\sffamily}
\setbeamerfont{footline}{size=\scriptsize}
\setbeamerfont{framesubtitle}{size=\small,series=\mdseries\sffamily}

%%%%% FOOTER LINE
\setbeamertemplate{footline}{%
	\begin{beamercolorbox}[sep=0.2em,wd=\paperwidth,leftskip=0.5cm,rightskip=0.5cm]{footlinecolor}
		\insertsectionnavigationhorizontal{0px}{}{} \hfill \insertframenumber
	\end{beamercolorbox}%
}

%%%%% FRAME TITLE AND SUBTITLE
\setbeamertemplate{frametitle}{
	\vskip .3cm%
	\begin{beamercolorbox}[sep=.9em,wd=\paperwidth,leftskip=0.5cm,rightskip=0.5cm]{footlinecolor}%
		~\hfill{\usebeamerfont{frametitle}\usebeamercolor[fg]{frametitle}\insertframetitle}\\%
		\ifx\insertframesubtitle\@empty%
		~\hfill{\usebeamerfont{framesubtitle}\usebeamercolor[fg]{framesubtitle}~}%
      	\else%
        ~\hfill{\usebeamerfont{framesubtitle}\usebeamercolor[fg]{framesubtitle}\insertframesubtitle}%
      	\fi%
	\end{beamercolorbox}%
}

%%%%% TITLE PAGE TEMPLATE
\setbeamerfont{title}{size=\normalsize}
\setbeamerfont{subtitle}{size=\small}
\setbeamerfont{author}{size=\small}
\setbeamerfont{website}{size=\small}
\setbeamerfont{institute}{size=\small}
\setbeamerfont{date}{size=\small}
\setbeamertemplate{title page}{%
    \vfill%
    \begin{beamercolorbox}[left,leftskip=.30\paperwidth]{institute}%
      \usebeamerfont{institute}\insertinstitute%
    \end{beamercolorbox}%
    \bigskip%
    \bigskip%
    \bigskip%
    \begin{beamercolorbox}[left,leftskip=.30\paperwidth]{title}
      \usebeamerfont{title}\inserttitle\par%
      \ifx\insertsubtitle\@empty%
      \else%
        \vskip0.25em%
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%
    \end{beamercolorbox}%
    \bigskip%
    \bigskip%
    \bigskip%
    \begin{beamercolorbox}[left,leftskip=.30\paperwidth]{author}%
      \usebeamerfont{author}\insertauthor%
    \end{beamercolorbox}%
    \ifx\@website\@empty%
    \else%
      \begin{beamercolorbox}[left,leftskip=.30\paperwidth]{website}%
        \usebeamerfont{website}\@website%
      \end{beamercolorbox}%
    \fi%
    \bigskip%
    \begin{beamercolorbox}[left,leftskip=.30\paperwidth]{date}%
      \usebeamerfont{date}\insertdate%
    \end{beamercolorbox}%
    \vfill%
}

\setbeamertemplate{tableofcontents}{
  \hfill
    \bigskip
  \hfill
}

\pgfdeclareimage[width=\paperwidth,height=\paperheight]{bg1}{bg1}
\pgfdeclareimage[width=\paperwidth,height=\paperheight]{bg2}{bg2}
%\pgfdeclareimage[width=\paperwidth,height=\paperheight]{bg-alt}{bg-alt}

\setbeamertemplate{background canvas}{%
    \ifnum\c@framenumber=0%
        \pgfuseimage{bg2}
    \fi%
}

%%%%% BLOCK

\setbeamertemplate{blocks}[rounded][shadow=false]

\mode
<all>